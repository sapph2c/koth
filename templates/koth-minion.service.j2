[Unit]
Description=Score KotH services and report the result
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
EnvironmentFile=/var/lib/scorify/.env
ExecStart=/var/lib/scorify/scorify koth --topic "{{ koth_check }}"
WorkingDirectory=/var/lib/scorify
Restart=always

[Install]
WantedBy=multi-user.target

